<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.mapper.RoleInfoMapper">

    <resultMap id="BaseResultMap" type="com.example.springboot.entity.RoleInfo">
            <id property="roleId" column="role_id" jdbcType="VARCHAR"/>
            <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
            <result property="roleDesc" column="role_desc" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        role_id,role_name,role_desc
    </sql>


    <select id="selectRoleListByUserId" resultType="java.lang.String">
        SELECT r.role_id
        FROM role_info r
                 JOIN user_role ur ON ur.role_id = r.role_id
                 JOIN user_info u ON u.user_id = ur.user_id
        WHERE ur.user_id =  #{userId}
    </select>

</mapper>
